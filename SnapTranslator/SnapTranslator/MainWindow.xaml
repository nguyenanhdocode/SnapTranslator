<Window x:Class="SnapTranslator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnapTranslator"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:bh="clr-namespace:SnapTranslator.Behaviors"
        xmlns:vm="clr-namespace:SnapTranslator.ViewModels"
        xmlns:cvt="clr-namespace:SnapTranslator.Converters"
        mc:Ignorable="d"
        Title="Snap Translator"
        MinWidth="820"
        MinHeight="600"
        Height="600"
        Width="820"
        Icon="pack://application:,,,/Images/translation.png">

    <Window.DataContext>
        <vm:MainWindowViewModel></vm:MainWindowViewModel>
    </Window.DataContext>

    <Window.Resources>
        <cvt:BooleanToColumnWidthConverter x:Key="BooleanToColumnWidthConverter"></cvt:BooleanToColumnWidthConverter>
    </Window.Resources>

    <Grid Background="#222">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding IsShowDocViewer, Converter={StaticResource BooleanToColumnWidthConverter}}"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal"
                        Margin="10 10 10 0"
                        Background="#f1f1f1">
                <Button Padding="10"
                        BorderBrush="#ddd"
                        Background="Transparent"
                        Height="35"
                        Margin="5 0 0 0"
                        VerticalAlignment="Center"
                        Command="{Binding BtnSaveImage_Cick_Command}">
                    <Image Source="pack://application:,,,/Images/downloads.png">
                    </Image>
                </Button>

                <Button Padding="10"
                        BorderBrush="#ddd"
                        Background="Transparent"
                        Height="35"
                        Margin="5 0 0 0"
                        VerticalAlignment="Center"
                        Command="{Binding BtnClearImage_Cick_Command}">
                    <Image Source="pack://application:,,,/Images/cross.png">
                    </Image>
                </Button>
            </StackPanel>
            <Grid Margin="10 0 10 10"
                  Grid.Row="1">
                <DocumentViewer Name="docViewer"
                                Background="#333"
                                AllowDrop="True"
                                Cursor="Hand"
                                ForceCursor="True"
                                Document="{Binding Document}">
                    <DocumentViewer.Resources>
                        <Style TargetType="ContentControl">
                            <Style.Triggers>
                                <Trigger Property="Name"
                                         Value="PART_FindToolBarHost">
                                    <Setter Property="Visibility"
                                            Value="Collapsed" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                        <Style TargetType="ToolBar">
                            <Setter Property="Visibility"
                                    Value="Collapsed" />
                        </Style>
                    </DocumentViewer.Resources>

                    <i:Interaction.Behaviors>
                        <bh:DocumentViewerDragBehavior></bh:DocumentViewerDragBehavior>
                    </i:Interaction.Behaviors>
                </DocumentViewer>
            </Grid>
        </Grid>

        <Grid Grid.Column="1"
              Margin="10"
              Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="10"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <TextBox FontSize="16"
                         Padding="8 55 10 10"
                         Background="#333"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         Foreground="#fff"
                         Name="txtInput"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto" />
                <StackPanel Orientation="Horizontal"
                            Margin="10">
                    <ComboBox MinWidth="300"
                              Width="300"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Top"
                              Name="cbSourceLang"
                              FontSize="16"
                              Height="40"
                              Padding="8"
                              Foreground="White"
                              Style="{StaticResource ComboBoxTest2}">

                        <ComboBoxItem>Item1</ComboBoxItem>
                        <ComboBoxItem>Item2</ComboBoxItem>
                    </ComboBox>
                    <Button Padding="10"
                            BorderBrush="#fff"
                            Background="Transparent"
                            FontSize="14"
                            Height="40"
                            Margin="10 0 0 0"
                            VerticalAlignment="Top"
                            Name="btnCapture"
                            Command="{Binding BtnCapture_Cick_Command}">
                        <Image Source="pack://application:,,,/Images/snip.png">
                        </Image>
                    </Button>

                    <Button Padding="10"
                            BorderBrush="#fff"
                            Background="Transparent"
                            FontSize="14"
                            Height="40"
                            Margin="10 0 0 0"
                            VerticalAlignment="Top"
                            Name="btnBrowse">
                        <Image Source="pack://application:,,,/Images/photo.png">
                        </Image>
                    </Button>
                    <Button Padding="10"
                            BorderBrush="#fff"
                            Background="Transparent"
                            Foreground="#fff"
                            FontSize="14"
                            Height="40"
                            Name="btnTranslate"
                            Width="90"
                            Margin="10 0 0 0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="pack://application:,,,/Images/right-arrow-dark.png"></Image>
                            <TextBlock FontSize="16"
                                       Margin="5 -2 0 0">Dịch</TextBlock>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="2">
                <TextBox FontSize="16"
                         Padding="8 55 10 10"
                         Background="#333"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         Foreground="#fff"
                         Name="txtOuput" />
                <StackPanel Orientation="Horizontal"
                            Margin="10">
                    <ComboBox MinWidth="300"
                              Width="300"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Top"
                              Name="cbDestLang"
                              FontSize="16"
                              Height="40"
                              Padding="8"
                              Foreground="White"
                              Style="{StaticResource ComboBoxTest2}">

                        <ComboBoxItem>Item1</ComboBoxItem>
                        <ComboBoxItem>Item2</ComboBoxItem>
                    </ComboBox>

                    <Button Padding="10"
                            BorderBrush="#fff"
                            Background="Transparent"
                            Foreground="#fff"
                            FontSize="14"
                            Height="40"
                            Name="btnCopy"
                            Width="90"
                            Margin="10 0 0 0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="pack://application:,,,/Images/copy-dark.png"></Image>
                            <TextBlock FontSize="16"
                                       Margin="5 -2 0 0">Copy</TextBlock>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>


    </Grid>
</Window>
